# Archivo: package.json (secci√≥n de scripts de testing)
{
  "scripts": {
    "test:unit": "pytest src/test/unit -v --cov=src --cov-report=html",
    "test:unit:fast": "pytest src/test/unit -k \"not performance\" -v",
    "test:unit:performance": "pytest src/test/unit -m performance -v",
    "test:unit:coverage": "pytest src/test/unit --cov=src --cov-report=xml --cov-report=html",
    "test:unit:watch": "pytest src/test/unit -v --cov=src --cov-report=term-missing --tb=short -f"
  },
  "devDependencies": {
    "pytest": "^7.4.0",
    "pytest-asyncio": "^0.21.0",
    "pytest-cov": "^4.1.0",
    "pytest-mock": "^3.11.1",
    "pytest-benchmark": "^4.0.0"
  }
}